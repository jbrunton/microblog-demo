<%= form_for(@user) do |f| %>
  <%= render "shared/errors", resource: @user %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :screen_name %><br />
    <%= f.text_field :screen_name %>
  </div>
  <div class="field">
    <%= f.label :avatar_url %><br />
    <%= f.text_field :avatar_url %>
  </div>
  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>
  <div class="actions">
    <%= f.submit 'Save', :class => 'small radius button' %>
    <%= link_to 'Cancel', @user, :class => 'small secondary radius button' %>
  </div>
<% end %>
